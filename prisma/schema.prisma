generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String              @id @default(cuid())
  role              userType            @default(USER)
  firstName         String?
  lastName          String?
  email             String?             @unique
  password          String?
  emailVerified     DateTime?
  isVerified        Boolean             @default(false)
  accounts          Account[]
  sessions          Session[]
  class             Class[]
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  verificationToken VerificationToken[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Class {
  id         String    @id @default(uuid())
  name       String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  createdAt  DateTime  @default(now())
  schoolYear String
  archived   Boolean   @default(false)
  students   Student[]
}

model Student {
  id          String       @id @default(uuid())
  name        String
  level       Int
  class       Class        @relation(fields: [classId], references: [id], onDelete: Cascade)
  classId     String
  assessments Assessment[]
  deletedAt   DateTime?
}

model Assessment {
  id            String             @id @default(uuid())
  studentId     String
  student       Student            @relation(fields: [studentId], references: [id], onDelete: Cascade)
  type          AssessmentType
  dateTaken     DateTime           @default(now())
  oralReading   OralReading?
  comprehension ComprehensionTest?
}

model OralReading {
  id             String     @id @default(uuid())
  assessmentId   String     @unique
  assessment     Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  audioUrl       String
  transcript     String
  readingTime    Int
  wcpm           Int
  accuracy       Float
  classification String
  miscues        Json
}

model ComprehensionTest {
  id           String     @id @default(uuid())
  assessmentId String     @unique
  assessment   Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  score        Int
  totalItems   Int
  level        String
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Passage {
  id        String   @id @default(uuid())
  title     String
  content   String
  language  String
  level     Int
  tags      Tags
  testType  testType
  quiz      Quiz?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Quiz {
  id          String     @id @default(uuid())
  passageId   String     @unique // Add @unique for one-to-one
  passage     Passage    @relation(fields: [passageId], references: [id], onDelete: Cascade)
  questions   Question[]
  totalScore  Int
  totalNumber Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Question {
  id            String       @id @default(uuid())
  quizId        String
  quiz          Quiz         @relation(fields: [quizId], references: [id], onDelete: Cascade)
  questionText  String
  tags          Tags
  type          QuestionType
  options       Json?        // Only for MULTIPLE_CHOICE (null for essay)
  correctAnswer String?      // Only for MULTIPLE_CHOICE (null for essay)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model VerificationToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("verification_tokens")
}

enum AssessmentType {
  ORAL_READING
  COMPREHENSION
  ORAL_READING_TEST
}

enum userType {
  USER
  ADMIN
}

enum testType {
  PRE_TEST
  POST_TEST
}

enum QuestionType {
  MULTIPLE_CHOICE
  ESSAY
}

enum Tags {
  Literal
  Inferential
  Critical
}
