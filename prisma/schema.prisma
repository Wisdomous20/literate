generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String              @id @default(cuid())
  email             String?             @unique
  password          String?
  emailVerified     DateTime?
  isVerified        Boolean             @default(false)
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  firstName         String?
  lastName          String?
  role              userType            @default(USER)
  class             Class[]
  accounts          Account[]
  sessions          Session[]
  verificationToken VerificationToken[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Class {
  id         String    @id @default(uuid())
  userId     String
  archived   Boolean   @default(false)
  createdAt  DateTime  @default(now())
  name       String
  schoolYear String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  students   Student[]
}

model Student {
  id          String       @id @default(uuid())
  level       Int
  classId     String
  deletedAt   DateTime?
  name        String
  assessments Assessment[]
  class       Class        @relation(fields: [classId], references: [id], onDelete: Cascade)
}

model Assessment {
  id            String              @id @default(uuid())
  studentId     String
  type          AssessmentType
  dateTaken     DateTime            @default(now())
  passageId     String
  passage       Passage             @relation(fields: [passageId], references: [id])
  student       Student             @relation(fields: [studentId], references: [id], onDelete: Cascade)
  comprehension ComprehensionTest?
  oralReading   OralReadingSession?
}

model OralReadingSession {
  id             String                @id @default(cuid())
  assessmentId   String?               @unique
  audioUrl       String                @default("")
  transcript     String?
  wordsPerMinute Float?
  accuracy       Float?
  totalWords     Int?
  totalMiscues   Int?
  duration       Float?
  status         OralReadingStatus     @default(PENDING)
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt
  deletedAt      DateTime?
  behaviors      OralReadingBehavior[]
  miscues        OralReadingMiscue[]
  assessment     Assessment?           @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  wordTimestamps WordTimestamp[]
}

model WordTimestamp {
  id         String             @id @default(cuid())
  sessionId  String
  word       String
  startTime  Float
  endTime    Float
  confidence Float?
  index      Int
  session    OralReadingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model OralReadingMiscue {
  id              String             @id @default(cuid())
  sessionId       String
  miscueType      MiscueType
  expectedWord    String
  spokenWord      String?
  wordIndex       Int
  timestamp       Float?
  isSelfCorrected Boolean            @default(false)
  createdAt       DateTime           @default(now())
  session         OralReadingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model OralReadingBehavior {
  id           String              @id @default(cuid())
  sessionId    String
  behaviorType ReadingBehaviorType
  startIndex   Int?
  endIndex     Int?
  startTime    Float?
  endTime      Float?
  notes        String?
  createdAt    DateTime            @default(now())
  session      OralReadingSession  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Passage {
  id          String       @id @default(uuid())
  title       String
  content     String
  language    String
  level       Int
  tags        Tags
  testType    testType
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  assessments Assessment[]
  quiz        Quiz?
}

model ComprehensionTest {
  id           String                @id @default(uuid())
  assessmentId String                @unique
  quizId       String
  score        Int
  totalItems   Int
  level        String
  answers      ComprehensionAnswer[]
  assessment   Assessment            @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  quiz         Quiz                  @relation(fields: [quizId], references: [id])
}

model ComprehensionAnswer {
  id                  String            @id @default(uuid())
  comprehensionTestId String
  questionId          String
  answer              String
  isCorrect           Boolean?
  createdAt           DateTime          @default(now())
  comprehensionTest   ComprehensionTest @relation(fields: [comprehensionTestId], references: [id], onDelete: Cascade)
  question            Question          @relation(fields: [questionId], references: [id])
}

model Quiz {
  id                 String              @id @default(uuid())
  passageId          String              @unique
  totalScore         Int
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  totalNumber        Int
  comprehensionTests ComprehensionTest[]
  questions          Question[]
  passage            Passage             @relation(fields: [passageId], references: [id], onDelete: Cascade)
}

model Question {
  id            String                @id @default(uuid())
  quizId        String
  questionText  String
  tags          Tags
  type          QuestionType
  options       Json?
  correctAnswer String?
  createdAt     DateTime              @default(now())
  updatedAt     DateTime              @updatedAt
  answers       ComprehensionAnswer[]
  quiz          Quiz                  @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("verification_tokens")
}

enum AssessmentType {
  ORAL_READING
  COMPREHENSION
  READING_FLUENCY
}

enum userType {
  USER
  ADMIN
}

enum testType {
  PRE_TEST
  POST_TEST
}

enum QuestionType {
  MULTIPLE_CHOICE
  ESSAY
}

enum Tags {
  Literal
  Inferential
  Critical
}

enum OralReadingStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum MiscueType {
  OMISSION
  MISPRONUNCIATION
  SUBSTITUTION
  REVERSAL
  TRANSPOSITION
  INSERTION
  SELF_CORRECTION
  REPETITION
}

enum ReadingBehaviorType {
  WORD_BY_WORD_READING
  MONOTONOUS_READING
  DISMISSAL_OF_PUNCTUATION
}
