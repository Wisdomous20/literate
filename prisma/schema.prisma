generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                String              @id @default(cuid())
  role              userType            @default(USER)
  firstName         String?
  lastName          String?
  email             String?             @unique
  password          String?
  emailVerified     DateTime?
  isVerified        Boolean             @default(false)
  accounts          Account[]
  sessions          Session[]
  class             Class[]
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  verificationToken VerificationToken[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Class {
  id         String    @id @default(uuid())
  name       String
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  createdAt  DateTime  @default(now())
  schoolYear String
  archived   Boolean   @default(false)
  students   Student[]
}

model Student {
  id                  String               @id @default(uuid())
  name                String
  level               Int
  class               Class                @relation(fields: [classId], references: [id], onDelete: Cascade)
  classId             String
  assessments         Assessment[]
  oralReadingSessions OralReadingSession[]
  deletedAt           DateTime?
}

model Assessment {
  id            String             @id @default(uuid())
  studentId     String
  student       Student            @relation(fields: [studentId], references: [id], onDelete: Cascade)
  type          AssessmentType
  dateTaken     DateTime           @default(now())
  oralReading   OralReadingSession?
  comprehension ComprehensionTest?
}

model OralReadingSession {
  id             String            @id @default(cuid())
  studentId      String
  passageId      String
  assessmentId   String?           @unique
  audioUrl       String            @default("")
  transcript     String?
  wordsPerMinute Float?
  accuracy       Float?
  totalWords     Int?
  totalMiscues   Int?
  duration       Float?
  status         OralReadingStatus @default(PENDING)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  deletedAt      DateTime?

  student        Student               @relation(fields: [studentId], references: [id])
  passage        Passage               @relation(fields: [passageId], references: [id])
  assessment     Assessment?            @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  miscues        OralReadingMiscue[]
  behaviors      OralReadingBehavior[]
  wordTimestamps WordTimestamp[]
}

model WordTimestamp {
  id         String @id @default(cuid())
  sessionId  String
  word       String
  startTime  Float
  endTime    Float
  confidence Float?
  index      Int

  session OralReadingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}


model OralReadingMiscue {
  id              String     @id @default(cuid())
  sessionId       String
  miscueType      MiscueType
  expectedWord    String
  spokenWord      String?
  wordIndex       Int
  timestamp       Float?
  isSelfCorrected Boolean    @default(false)
  createdAt       DateTime   @default(now())

  session OralReadingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model OralReadingBehavior {
  id           String              @id @default(cuid())
  sessionId    String
  behaviorType ReadingBehaviorType
  startIndex   Int?
  endIndex     Int?
  startTime    Float?
  endTime      Float?
  notes        String?
  createdAt    DateTime            @default(now())

  session OralReadingSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model ComprehensionTest {
  id           String     @id @default(uuid())
  assessmentId String     @unique
  assessment   Assessment @relation(fields: [assessmentId], references: [id], onDelete: Cascade)
  score        Int
  totalItems   Int
  level        String
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Passage {
  id                  String               @id @default(uuid())
  title               String
  content             String
  language            String
  level               Int
  tags                Tags
  testType            testType
  oralReadingSessions OralReadingSession[]
  quiz                Quiz?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
}

model Quiz {
  id          String     @id @default(uuid())
  passageId   String     @unique // Add @unique for one-to-one
  passage     Passage    @relation(fields: [passageId], references: [id], onDelete: Cascade)
  questions   Question[]
  totalScore  Int
  totalNumber Int
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Question {
  id            String       @id @default(uuid())
  quizId        String
  quiz          Quiz         @relation(fields: [quizId], references: [id], onDelete: Cascade)
  questionText  String
  tags          Tags
  type          QuestionType
  options       Json? // Only for MULTIPLE_CHOICE (null for essay)
  correctAnswer String? // Only for MULTIPLE_CHOICE (null for essay)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model VerificationToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("verification_tokens")
}

enum AssessmentType {
  ORAL_READING
  COMPREHENSION
  ORAL_READING_TEST
}

enum userType {
  USER
  ADMIN
}

enum testType {
  PRE_TEST
  POST_TEST
}

enum QuestionType {
  MULTIPLE_CHOICE
  ESSAY
}

enum Tags {
  Literal
  Inferential
  Critical
}

enum OralReadingStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

enum MiscueType {
  OMISSION
  MISPRONUNCIATION
  SUBSTITUTION
  REVERSAL
  TRANSPOSITION
  INSERTION
  SELF_CORRECTION
}

enum ReadingBehaviorType {
  WORD_BY_WORD_READING
  MONOTONOUS_READING
  DISMISSAL_OF_PUNCTUATION
}
